# download fonts and copy to local
mkdir -p ~/.local/share/fonts
cp ~/Downloads/*.ttf ~/.local/share/fonts
cp ~/Downloads/*.otf ~/.local/share/fonts

cp ~/Documents/fonts/*.ttf ~/.local/share/fonts
cp ~/Documents/fonts/*.otf ~/.local/share/fonts

# refresh font cache
fc-cache -fv

# install droid sans nerd font
# patched nerd fonts @ https://github.com/ryanoasis/nerd-fonts#patched-fonts
mkdir -p ~/.local/share/fonts
cd ~/.local/share/fonts;and curl -fLo "Droid Sans Mono for Powerline Nerd Font Complete.otf" https://raw.githubusercontent.com/ryanoasis/nerd-fonts/master/patched-fonts/DroidSansMono/complete/Droid%20Sans%20Mono%20for%20Powerline%20Nerd%20Font%20Complete.otf

# install Lekton font
